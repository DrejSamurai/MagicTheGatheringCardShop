@model IntegratedSystems.Domain.Domain_Models.Card

@{
    ViewData["Title"] = "Delete Card";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <style>
        .custom-form {
            background-color: #2e323c;
            padding: 60px;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            max-width: 700px;
            margin: 0 auto;
            min-height: 400px; 
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .form-content {
            margin-bottom: 20px;
        }

        .custom-label {
            font-weight: 600;
            font-size: 14px;
            color: #495057;
        }

        .custom-button {
            background-color: #F6A000;
            border: none;
            color: white;
            padding: 12px;
            font-size: 18px;
            border-radius: 8px;
            margin-right: 10px;
        }

            .custom-button:hover {
                background-color: #C48000;
            }

        .cancel-button {
            background-color: #dc3545; 
            border: none;
            color: white;
            padding: 12px;
            font-size: 18px;
            border-radius: 8px;
        }

            .cancel-button:hover {
                background-color: #c82333; 
            }

        .button-container {
            display: flex;
            justify-content: center;
            gap: 15px; 
        }

        .form-content h1, .form-content h3, .form-content h4 {
            color: #F6A000;
        }

        .form-content dt {
            font-weight: 600;
            color: #F6A000;
        }

        .form-content dd {
            color: white;
        }
    </style>
</head>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="custom-form">
                <div class="form-content">
                    <h1 class="text-center">Delete Card</h1>
                    <h3 class="text-center">Are you sure you want to delete this?</h3>
                    <hr />
                    <h4 class="text-center">Card Details</h4>
                    <dl class="row">
                        <dt class="col-sm-2 custom-label">
                            @Html.DisplayNameFor(model => model.Expansion)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Expansion.ExpansionDescription)
                        </dd>
                        <dt class="col-sm-2 custom-label">
                            @Html.DisplayNameFor(model => model.CardName)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.CardName)
                        </dd>
                        <dt class="col-sm-2 custom-label">
                            @Html.DisplayNameFor(model => model.CardDescription)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.CardDescription)
                        </dd>
                        <dt class="col-sm-2 custom-label">
                            @Html.DisplayNameFor(model => model.Price)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Price)
                        </dd>
                        <dt class="col-sm-2 custom-label">
                            @Html.DisplayNameFor(model => model.Rating)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Rating)
                        </dd>
                        <dt class="col-sm-2 custom-label">
                            @Html.DisplayNameFor(model => model.Rarity)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Rarity)
                        </dd>
                    </dl>
                </div>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <div class="button-container">
                        <input type="submit" value="Delete" class="custom-button" />
                        <a asp-action="Index" class="cancel-button">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}